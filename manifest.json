{
    "manifest_version": 2,
    "name": "Policy Analyzer",
    "version": "1.0",
  
    "description": "Analyze the Privacy policy you are accepting by accessing a web page.",
  
    "icons": {
        "16": "icons/icon-16.png.png",
        "48": "icons/icon-48.png.png",
        "128": "icons/icon-128.png.png"

    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["analyzer.js"]
      }
    ]
  }
  